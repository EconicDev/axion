---
import Layout from '../layouts/Layout.astro';
import { Button } from "../components/ui/button.jsx";
import { Input } from "../components/ui/input.jsx";
import { Textarea } from "../components/ui/textarea.jsx";
import { Card, CardContent } from "../components/ui/card.jsx";
import {
  Sun,
  Camera,
  Lightbulb,
  Wrench,
  Shield,
  DollarSign,
  MapPin,
  Headphones,
  Phone,
  Mail,
  MessageCircle,
  Facebook,
  Instagram,
  Star,
} from "lucide-react";
---

<Layout 
  title="Axion - Energía Limpia" 
  description="Especialistas en instalación de paneles solares para el hogar. También ofrecemos servicios de iluminación, cámaras de seguridad y trabajos eléctricos residenciales en toda República Dominicana."
>
  <div class="min-h-screen bg-white">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b sticky top-0 z-50">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2">
            <div class="w-10 h-10 bg-gradient-to-br from-emerald-400 to-blue-500 rounded-lg flex items-center justify-center">
              <Sun className="w-6 h-6 text-white" client:load />
            </div>
            <div>
              <h1 class="text-xl font-bold text-gray-900">Axion</h1>
              <p class="text-xs text-gray-600">Energía Limpia</p>
            </div>
          </div>

          <nav class="hidden md:flex items-center space-x-8">
            <a href="#home" class="text-gray-700 hover:text-blue-600 transition-colors">
              Inicio
            </a>
            <a href="#services" class="text-gray-700 hover:text-blue-600 transition-colors">
              Servicios
            </a>
            <a href="#about" class="text-gray-700 hover:text-blue-600 transition-colors">
              Nosotros
            </a>
            <a href="#contact" class="text-gray-700 hover:text-blue-600 transition-colors">
              Contacto
            </a>
          </nav>

          <Button className="bg-blue-600 hover:bg-blue-700 text-white" client:load>Cotización Gratis</Button>
        </div>
      </div>
    </header>

    <!-- Hero Section -->
    <section id="home" class="bg-gradient-to-br from-purple-50 to-emerald-50 py-20">
      <div class="container mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
              De Cero a Solar. <span class="text-blue-600">Energía Limpia</span> Comienza Aquí.
            </h1>
            <p class="text-xl text-gray-700 mb-8 leading-relaxed">
              Especialistas en instalación de paneles solares para el hogar. También ofrecemos servicios de
              iluminación, cámaras de seguridad y trabajos eléctricos residenciales en toda República Dominicana.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <Button size="lg" className="bg-blue-600 hover:bg-blue-700 text-white" client:load>
                <Sun className="w-5 h-5 mr-2" />
                Instalar Paneles Solares
              </Button>
              <Button size="lg" variant="outline" className="border-blue-600 text-blue-600 hover:bg-blue-50" client:load>
                Ver Todos los Servicios
              </Button>
            </div>
          </div>
          <div class="relative">
            <img
              src="/placeholder.svg?height=500&width=600"
              alt="Casa con paneles solares en República Dominicana"
              width="600"
              height="500"
              class="rounded-lg shadow-2xl"
            />
            <div class="absolute -bottom-6 -left-6 bg-white p-4 rounded-lg shadow-lg">
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                <span class="text-sm font-medium">Ahorro del 70% en electricidad</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Nuestros Servicios</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Soluciones eléctricas completas para tu hogar, desde energía solar hasta seguridad
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <Card className="text-center p-6 hover:shadow-lg transition-shadow border-2 hover:border-blue-200" client:load>
            <CardContent className="pt-6">
              <div class="w-16 h-16 bg-gradient-to-br from-emerald-400 to-teal-500 rounded-full flex items-center justify-center mx-auto mb-4">
                <Sun className="w-8 h-8 text-white" client:load />
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Instalación de Paneles Solares</h3>
              <p class="text-gray-600">
                Sistemas solares completos para reducir tu factura eléctrica hasta un 90%
              </p>
            </CardContent>
          </Card>

          <Card className="text-center p-6 hover:shadow-lg transition-shadow border-2 hover:border-blue-200" client:load>
            <CardContent className="pt-6">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <Camera className="w-8 h-8 text-white" client:load />
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Cámaras de Seguridad</h3>
              <p class="text-gray-600">Sistemas de vigilancia modernos para proteger tu hogar las 24 horas</p>
            </CardContent>
          </Card>

          <Card className="text-center p-6 hover:shadow-lg transition-shadow border-2 hover:border-blue-200" client:load>
            <CardContent className="pt-6">
              <div class="w-16 h-16 bg-gradient-to-br from-purple-400 to-blue-500 rounded-full flex items-center justify-center mx-auto mb-4">
                <Lightbulb className="w-8 h-8 text-white" client:load />
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Soluciones de Iluminación</h3>
              <p class="text-gray-600">Iluminación LED eficiente y sistemas de iluminación inteligente</p>
            </CardContent>
          </Card>

          <Card className="text-center p-6 hover:shadow-lg transition-shadow border-2 hover:border-blue-200" client:load>
            <CardContent className="pt-6">
              <div class="w-16 h-16 bg-gradient-to-br from-teal-400 to-emerald-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <Wrench className="w-8 h-8 text-white" client:load />
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Reparaciones Eléctricas</h3>
              <p class="text-gray-600">Mantenimiento y reparación de sistemas eléctricos residenciales</p>
            </CardContent>
          </Card>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Lo Que Dicen Nuestros Clientes</h2>
          <p class="text-xl text-gray-600">Testimonios reales de familias dominicanas satisfechas</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <Card className="p-6" client:load>
            <CardContent className="pt-6">
              <div class="flex mb-4">
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
              </div>
              <p class="text-gray-700 mb-4">
                "Excelente servicio. Los paneles solares han reducido mi factura de luz en un 80%. El equipo fue muy
                profesional y terminaron en tiempo récord."
              </p>
              <div class="flex items-center">
                <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-emerald-600 font-semibold">MR</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">María Rodríguez</p>
                  <p class="text-gray-600 text-sm">Santo Domingo</p>
                </div>
              </div>
            </CardContent>
          </Card>

          <Card className="p-6" client:load>
            <CardContent className="pt-6">
              <div class="flex mb-4">
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
              </div>
              <p class="text-gray-700 mb-4">
                "Instalaron las cámaras de seguridad en mi casa y ahora me siento mucho más tranquilo. Trabajo de
                calidad y precios justos."
              </p>
              <div class="flex items-center">
                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-blue-600 font-semibold">CG</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Carlos Gómez</p>
                  <p class="text-gray-600 text-sm">Santiago</p>
                </div>
              </div>
            </CardContent>
          </Card>

          <Card className="p-6" client:load>
            <CardContent className="pt-6">
              <div class="flex mb-4">
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
                <Star className="w-5 h-5 text-yellow-400 fill-current" client:load />
              </div>
              <p class="text-gray-700 mb-4">
                "Renovaron toda la iluminación de mi negocio con LED. El ahorro en electricidad ha sido increíble y la
                iluminación es mucho mejor."
              </p>
              <div class="flex items-center">
                <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-purple-600 font-semibold">LM</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Luis Martínez</p>
                  <p class="text-gray-600 text-sm">La Romana</p>
                </div>
              </div>
            </CardContent>
          </Card>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section id="about" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">¿Por Qué Elegirnos?</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Somos la opción confiable para tus necesidades eléctricas y de energía solar
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-emerald-400 to-teal-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <Shield className="w-8 h-8 text-white" client:load />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Instaladores Certificados</h3>
            <p class="text-gray-600">
              Técnicos certificados con años de experiencia en sistemas solares y eléctricos
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-400 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <DollarSign className="w-8 h-8 text-white" client:load />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Precios Accesibles</h3>
            <p class="text-gray-600">
              Ofertas competitivas y planes de financiamiento para hacer la energía solar accesible
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-400 to-blue-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <MapPin className="w-8 h-8 text-white" client:load />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Experiencia Local</h3>
            <p class="text-gray-600">Conocemos el clima y las necesidades específicas de República Dominicana</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-teal-400 to-emerald-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <Headphones className="w-8 h-8 text-white" client:load />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Soporte Confiable</h3>
            <p class="text-gray-600">Servicio al cliente 24/7 y garantía extendida en todos nuestros trabajos</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-gradient-to-br from-purple-50 to-blue-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Solicita Tu Cotización Gratuita</h2>
            <p class="text-xl text-gray-600">Completa el formulario y te contactaremos en menos de 24 horas</p>
          </div>

          <Card className="p-8" client:load>
            <CardContent>
              <form class="space-y-6">
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Nombre Completo *</label>
                    <Input placeholder="Tu nombre completo" client:load />
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Teléfono *</label>
                    <Input placeholder="(809) 000-0000" client:load />
                  </div>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Dirección</label>
                  <Input placeholder="Tu dirección completa" client:load />
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Servicio Necesario *</label>
                  <select class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Selecciona un servicio</option>
                    <option value="solar">Instalación de Paneles Solares</option>
                    <option value="security">Cámaras de Seguridad</option>
                    <option value="lighting">Soluciones de Iluminación</option>
                    <option value="electrical">Reparaciones Eléctricas</option>
                    <option value="other">Otro</option>
                  </select>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Mensaje Adicional</label>
                  <Textarea placeholder="Cuéntanos más sobre tu proyecto..." rows={4} client:load />
                </div>

                <Button className="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 text-lg" client:load>
                  Enviar Solicitud de Cotización
                </Button>
              </form>
            </CardContent>
          </Card>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-4 gap-8">
          <div>
            <div class="flex items-center space-x-2 mb-4">
              <div class="w-10 h-10 bg-gradient-to-br from-emerald-400 to-blue-500 rounded-lg flex items-center justify-center">
                <Sun className="w-6 h-6 text-white" client:load />
              </div>
              <div>
                <h3 class="text-xl font-bold">Axion</h3>
                <p class="text-sm text-gray-400">Energía Limpia</p>
              </div>
            </div>
            <p class="text-gray-400 text-sm">
              Especialistas en energía solar y servicios eléctricos residenciales en República Dominicana.
            </p>
          </div>

          <div>
            <h4 class="text-lg font-semibold mb-4">Contacto</h4>
            <div class="space-y-2 text-sm text-gray-400">
              <div class="flex items-center">
                <Phone className="w-4 h-4 mr-2" client:load />
                <span>(809) 555-0123</span>
              </div>
              <div class="flex items-center">
                <Mail className="w-4 h-4 mr-2" client:load />
                <span>info@solardr.com</span>
              </div>
              <div class="flex items-center">
                <MapPin className="w-4 h-4 mr-2" client:load />
                <span>Santo Domingo, RD</span>
              </div>
            </div>
          </div>

          <div>
            <h4 class="text-lg font-semibold mb-4">Servicios</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li>Paneles Solares</li>
              <li>Cámaras de Seguridad</li>
              <li>Iluminación LED</li>
              <li>Reparaciones Eléctricas</li>
            </ul>
          </div>

          <div>
            <h4 class="text-lg font-semibold mb-4">Síguenos</h4>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-400 hover:text-white transition-colors">
                <Facebook className="w-6 h-6" client:load />
              </a>
              <a href="#" class="text-gray-400 hover:text-white transition-colors">
                <Instagram className="w-6 h-6" client:load />
              </a>
              <a href="https://wa.me/18095550123" class="text-gray-400 hover:text-green-400 transition-colors">
                <MessageCircle className="w-6 h-6" client:load />
              </a>
            </div>
            <div class="mt-4">
              <a
                href="https://wa.me/18095550123"
                class="inline-flex items-center bg-teal-600 hover:bg-teal-700 text-white px-4 py-2 rounded-lg text-sm transition-colors"
              >
                <MessageCircle className="w-4 h-4 mr-2" client:load />
                WhatsApp
              </a>
            </div>
          </div>
        </div>

        <div class="border-t border-gray-800 mt-8 pt-8 text-center">
          <p class="text-gray-400 text-sm">
            © 2025 Axion. Todos los derechos reservados. | Licencia eléctrica #12345 | Los
            resultados pueden variar según las condiciones del hogar.
          </p>
        </div>
      </div>
    </footer>
  </div>
</Layout>
